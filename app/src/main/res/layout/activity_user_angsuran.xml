<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserAngsuranActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Angsuran"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_marginBottom="16dp"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/user_angsuran_kode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabel="normal"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_android_black_24dp"
                app:met_textColor="@color/black"
                app:met_textColorHint="@color/black"
                app:met_primaryColor="@color/black"
                app:met_baseColor="@color/black"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                app:met_floatingLabelTextColor="@color/black"
                app:met_helperTextColor="@color/black"
                android:hint="Kode Angsuran"
                android:textSize="16sp"
                android:enabled="false"
                />
            <Spinner
                android:id="@+id/user_angsuran_kode_peminjaman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="Kode Peminjaman"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/user_angsuran_pilh_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Tanggal"
                android:textAllCaps="false"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/user_angsuran_tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabel="normal"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_android_black_24dp"
                app:met_textColor="@color/black"
                app:met_textColorHint="@color/black"
                app:met_primaryColor="@color/black"
                app:met_baseColor="@color/black"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                app:met_floatingLabelTextColor="@color/black"
                app:met_helperTextColor="@color/black"
                android:hint="Tanggal"
                android:textSize="16sp"
                android:enabled="false"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/user_angsuran_ke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabel="normal"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_android_black_24dp"
                app:met_textColor="@color/black"
                app:met_textColorHint="@color/black"
                app:met_primaryColor="@color/black"
                app:met_baseColor="@color/black"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                app:met_floatingLabelTextColor="@color/black"
                app:met_helperTextColor="@color/black"
                android:hint="Angsuran Ke"
                android:textSize="16sp"
                android:enabled="false"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/user_angsuran_jumlah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabel="normal"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_android_black_24dp"
                app:met_textColor="@color/black"
                app:met_textColorHint="@color/black"
                app:met_primaryColor="@color/black"
                app:met_baseColor="@color/black"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                app:met_floatingLabelTextColor="@color/black"
                app:met_helperTextColor="@color/black"
                android:hint="Jumlah"
                android:textSize="16sp"
                android:enabled="false"
                />

            <ImageView
                android:id="@+id/user_angsuran_bukti_transfer"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ic_backup_black_24dp"
                />
            <Button
                android:id="@+id/user_angsuran_upload_gambar"
                android:layout_width="150dp"
                android:background="@android:color/black"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:text="unggah bukti "/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">
                <Button
                    android:id="@+id/user_angsuran_simpan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Simpan"
                    android:textAllCaps="true"
                    />
                <Button
                    android:id="@+id/user_angsuran_batal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Batal"
                    android:textAllCaps="true"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>